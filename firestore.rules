/**
 * @fileoverview Firestore Security Rules for LiFE-iN-SYNC application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, where each user has complete control over their own data.
 *
 * Data Structure:
 * All user-specific data is nested under /users/{userId} to ensure data isolation. A top-level /expenses
 * collection is used for simplified querying, with rules enforcing ownership via a `userProfileId` field.
 *
 * Key Security Decisions:
 * - User data is strictly private; listing all users is disallowed.
 * - All write operations require the user to be authenticated and the owner of the data.
 * - Data consistency between the `userProfileId` field and the authenticated `uid` is enforced.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces ownership for a resource.
     * @param userId The UID of the user from the path.
     * @returns boolean True if the requester is the owner.
     */
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Enforces ownership and validates that the resource exists.
     * @param userId The UID of the user from the path.
     * @returns boolean True if the requester is the owner of an existing document.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Validates that the incoming data's `userProfileId` matches the user's UID.
     * @param userId The UID of the user from the path.
     * @returns boolean True if the `userProfileId` is correct.
     */
    function isDataOwner(userId) {
      return request.resource.data.userProfileId == userId;
    }

    /**
     * @description Ensures the `userProfileId` field cannot be changed on update.
     * @returns boolean True if the `userProfileId` is unchanged.
     */
    function isOwnershipImmutable() {
      return request.resource.data.userProfileId == resource.data.userProfileId;
    }

    /**
     * /users/{userId}
     * - Users can only read, update, or delete their own profile.
     * - Creating a profile requires the document ID to match the user's UID.
     * - Listing all users is disallowed.
     */
    match /users/{userId} {
      allow get, update, delete: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.id == userId;
      allow list: if false;

      /**
       * Subcollections under a user's profile.
       * These rules apply to habits, journalEntries, budgets, etc.
       */
      match /{collection}/{docId} {
        allow list, get: if isOwner(userId);
        allow create: if isOwner(userId) && isDataOwner(userId);
        allow update: if isOwner(userId) && isOwnershipImmutable();
        allow delete: if isOwner(userId);
      }

      /**
       * Special case for nested exercises, inheriting the workout template's ownership.
       * This is an example of deeper nesting if required.
       */
       match /workoutTemplates/{workoutTemplateId}/exercises/{exerciseId} {
          allow list, get, create, update, delete: if isOwner(userId);
       }
    }
    
    /**
     * /expenses/{expenseId}
     * - This is a root collection for easier querying.
     * - Ownership is enforced by checking the `userProfileId` field in the document data.
     * - This allows querying all of a user's expenses without needing to know the budget.
     */
    match /expenses/{expenseId} {
        allow get, update, delete: if isExistingOwner(resource.data.userProfileId);
        allow list: if request.auth != null && request.query.where.size() > 0 && request.query.where[0][1] == 'userProfileId'; // Allow list only when filtering by userProfileId
        allow create: if isOwner(request.resource.data.userProfileId);
    }
  }
}

    